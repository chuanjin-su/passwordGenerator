<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListActivity">

    <EditText
        android:id="@+id/editTextHint"
        android:layout_width="226dp"
        android:layout_height="69dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Log your hint here"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/listViewHints"
        app:layout_constraintEnd_toStartOf="@+id/buttonAddHint"
        app:layout_constraintHorizontal_bias="0.355"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonAddHint"
        android:layout_width="86dp"
        android:layout_height="40dp"
        android:text="Log"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.882"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonModifyHint"
        android:layout_width="86dp"
        android:layout_height="40dp"
        android:text="Modify"
        app:layout_constraintBottom_toTopOf="@id/buttonDeleteHint"
        app:layout_constraintEnd_toEndOf="@id/buttonAddHint"
        app:layout_constraintStart_toStartOf="@id/buttonAddHint"
        app:layout_constraintTop_toBottomOf="@id/buttonAddHint" />

    <Button
        android:id="@+id/buttonDeleteHint"
        android:layout_width="86dp"
        android:layout_height="40dp"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="@id/buttonAddHint"
        app:layout_constraintLeft_toLeftOf="@id/buttonModifyHint"
        app:layout_constraintRight_toRightOf="@id/buttonModifyHint"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ListView
        android:id="@+id/listViewHints"
        android:layout_width="391dp"
        android:layout_height="586dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonDeleteHint"
        app:layout_constraintVertical_bias="0.0"></ListView>

</androidx.constraintlayout.widget.ConstraintLayout>